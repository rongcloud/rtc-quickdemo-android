<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            android:shape="ring" android:innerRadius="3dp" android:thickness="6dp" android:useLevel="false">
            <solid android:color="@color/blue_0"/>
            <size android:width="@dimen/live_room_setting_progress_height"
                android:height="@dimen/live_room_setting_progress_height"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape
            android:shape="ring" android:innerRadius="3dp" android:thickness="6dp" android:useLevel="false">
            <solid android:color="@color/gray_lighter"/>
            <size android:width="@dimen/live_room_setting_progress_height"
                android:height="@dimen/live_room_setting_progress_height"/>
        </shape>
    </item>
</selector>